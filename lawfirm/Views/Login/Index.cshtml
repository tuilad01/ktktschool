@model lawfirm.Models.Login.LoginRegisterModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix" style="min-height: 400px">
    <div class="row">
        <div class="col-md-8">
            @using(Html.BeginForm("Register", "Login", FormMethod.Post)) 
            {
            @Html.AntiForgeryToken()
            <fieldset>
                <legend>Đăng ký</legend>
                <div class="form-group">
                    <label for="Email">Email</label>
                    @Html.EditorFor(model => model.RegisterModel.Email, new {htmlAttributes = new { @class = "form-control", @placeholder="Email" } })
                    @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">*@
                </div>
                <div class="form-group">
                    <label for="Password">Mật khẩu</label>
                    @Html.PasswordFor(model=>model.RegisterModel.Password,  new { @class = "form-control", @placeholder = "Password" } )
                </div>
                <div class="form-group">
                    <label for="Name">Họ tên</label>
                    @Html.EditorFor(model => model.RegisterModel.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Họ và tên" } })
                </div>
                <div class="form-group">
                    <label for="Phone">Số điện thoại</label>
                    @Html.EditorFor(model => model.RegisterModel.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điện thoại" } })
                </div>
                <div class="form-group">
                    <label for="Address">Địa chỉ</label>
                    @Html.EditorFor(model => model.RegisterModel.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Địa chỉ" } })
                </div>
                <button type="submit" class="btn btn-default">Đăng ký</button>
            </fieldset>
            }
        </div>
